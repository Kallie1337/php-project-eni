{% extends 'base.html.twig' %}

{% block title %}Trip index{% endblock %}

{% block body %}
    <h1>Trip index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>BeginDateTime</th>
                <th>endDateTime</th>
                <th>RegistrationEndDate</th>
                <th>MaxRegistration</th>
                <th>Infos</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trip in trips %}
            <tr>
                <td>{{ trip.id }}</td>
                <td>{{ trip.name }}</td>
                <td>{{ trip.beginDateTime ? trip.beginDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ trip.endDateTime }}</td>
                <td>{{ trip.registrationEndDate ? trip.registrationEndDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ trip.maxRegistration }}</td>
                <td>{{ trip.infos }}</td>
                <td>
                    <a href="{{ path('trip_show', {'id': trip.id}) }}">show</a>
                    <a href="{{ path('trip_edit', {'id': trip.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('trip_new') }}">Create new</a>
{% endblock %}
