{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <h1>Trip</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trip.name }}</td>
            </tr>
            <tr>
                <th>BeginDateTime</th>
                <td>{{ trip.beginDateTime ? trip.beginDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ trip.duration }}</td>
            </tr>
            <tr>
                <th>RegistrationEndDate</th>
                <td>{{ trip.registrationEndDate ? trip.registrationEndDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>MaxRegistration</th>
                <td>{{ trip.maxRegistration }}</td>
            </tr>
            <tr>
                <th>Infos</th>
                <td>{{ trip.infos }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('trip_index') }}">back to list</a>

    <a href="{{ path('trip_edit', {'id': trip.id}) }}">edit</a>

    {{ include('trip/_delete_form.html.twig') }}
{% endblock %}
