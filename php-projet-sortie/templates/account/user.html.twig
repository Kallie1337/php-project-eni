{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div >
            <img id="img_user" src="{{ asset('uploads/brochures/' ~ imgPath) }}"/>
        </div>
        <div class="offset-md-2 col-md-9">
            <h1>User</h1>
            {% for messages in app.flashes('error') %}
                <div class="error offset-lg-4">{{ messages }}</div>
            {% endfor %}
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-5">
                    {{ form_row(form.username, {'attr' : {'class' : 'form-control'}}) }}
                </div>
                <div class="offset-md-1 col-md-5">
                    {{ form_row(form.email, {'attr' : {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    {{ form_row(form.first_name, {'attr' : {'class' : 'form-control'}}) }}
                </div>
                <div class="offset-md-1 col-md-5">
                    {{ form_row(form.last_name, {'attr' : {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    {{ form_row(form.phone, {'attr' : {'class' : 'form-control'}}) }}
                </div>
                <div class="offset-md-1 col-md-5">
                    {{ form_row(form.password, {'attr' : {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    {{ form_row(form.image, {'attr' : {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="account offset-md-5">
                <input type="submit" class="btn btn-secondary" value="Send">
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

